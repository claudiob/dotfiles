alias  r='rails'
function rv {
  if [ -f script/server ]; then # Rails 2
    script/server $*;
  elif [ -f script/rails ]; then # Rails 3
    script/rails server $*;
  elif [ -f bin/rails ]; then # Rails 4
    bin/rails server $*;
  fi
}
