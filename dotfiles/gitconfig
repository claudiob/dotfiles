[user]
	name = your-name-here
	email = your@email.here
[alias]
	co = checkout
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	editor = mate -w
	autocrlf = input
        paget = less -x4
	pager = less -x3
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr, %aN)%Creset
[push]
	default=current
