alias unsvn="find . -name '.svn' -exec rm -rf {} \;"

# CUSTOM DROPBOX
# --------------
PPFILE='__drop__.zip'
PPTO='gollum'

function push {
  rm -f $PPFILE
  zip -r $PPFILE $*
  scp $PPFILE $PPTO:
  rm -f $PPFILE
}

function pull {
  rm -f $PPFILE
  scp $PPTO:$PPFILE .
  ssh $PPTO rm -f $PPFILE
  unzip $PPFILE
  rm -f $PPFILE
}

